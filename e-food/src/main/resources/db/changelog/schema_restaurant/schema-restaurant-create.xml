<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

<property name="schema_name" value="restaurant"/>
<property name="schema_menu" value="menu"/>
<property name="schema_staff" value="staff"/>



<!--  restaurant table-->
    <changeSet  author="fayssol"  id="RESTAURANT-CREATE-UID001">
       <createTable schemaName="${schema_name}" tableName="restaurants">
            <column name="code" type="VARCHAR(100)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="nom" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="adresse" type="VARCHAR(30)"/>
            <column name="ville" type="VARCHAR(30)"/>
            <column name="telephone" type="VARCHAR(15)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="heure_ouverture" type="CHAR(2)">
                <constraints nullable="false" />
            </column>
            <column name="heure_fermeture" type="CHAR(2)">
                <constraints nullable="false" />
            </column>
            <column name="jour_ouverture" type="VARCHAR(10) []">
                <constraints nullable="false" />
            </column>
            <column name="coordonnee_gps_x" type="VARCHAR(50)"/>
            <column name="coordonnee_gps_y" type="VARCHAR(50)"/>
            <column name="etat" type="VARCHAR(30)"/>
            <!-- les OneToMany -->
            
        </createTable>
  </changeSet>


<!-- evenements table -->
    <changeSet  author="fayssol"  id="EVENEMENT-CREATE-UID001">
         <createTable schemaName="${schema_name}" tableName="evenements">
            <column name="code" type="VARCHAR(100)">
                 <constraints nullable="false"/>
            </column>
            <column name="titre" type="VARCHAR(30)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false" />
            </column>
            <column name="date_debut" type="DATE"/>
             <column name="date_fin" type="DATE"/>
             <!-- Les  ManyToOne-->
         </createTable>
    </changeSet>


       <changeSet author="fayssol" id="EVENEMENT-PRIMARYKEY-UID001">
        <addPrimaryKey schemaName="${schema_name}" columnNames="code" constraintName="evenement-id_pk" tableName="evenements"/>
    </changeSet>

    <!-- publicite table -->
    <changeSet  author="fayssol"  id="PUBLICITE-CREATE-UID001">
         <createTable schemaName="${schema_name}" tableName="publicites">
            <column name="id" type="VARCHAR(100)">
               <constraints primaryKey="true"/>
            </column>
            <column name="titre" type="VARCHAR(30)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="VARCHAR(100)"/>
          <!-- les OneToMany -->
         </createTable>
    </changeSet>

    <!-- adhesion table -->
    <changeSet  author="fayssol"  id="ADHESION-CREATE-UID001">
         <createTable schemaName="${schema_name}" tableName="adhesions">
            <column name="id" type="BIGINT">
               <constraints primaryKey="true" />
            </column>
            <column name="avis" type="VARCHAR(30)">
                <constraints nullable="false" />
            </column>
            
          <!-- les ManyToOne -->
         </createTable>
    </changeSet>






<!-- les relations etrangÃ¨res -->

<!-- pour le model restaurant -->

  <changeSet author="fayssol" id="RESTAURANT-FOREIGNKEY-EVENT001">
        <addForeignKeyConstraint baseTableSchemaName="${schema_name}" baseColumnNames="evenements" 
                                 baseTableName="restaurants" constraintName="restaurants_event_fk" deferrable="false" 
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="restaurant_id"
                                 referencedTableName="evenements" referencedTableSchemaName="${schema_name}"/>
    </changeSet>
    <changeSet author="fayssol" id="RESTAURANT-FOREIGNKEY-ADHESION001">
        <addForeignKeyConstraint baseTableSchemaName="${schema_name}" baseColumnNames="adhesions" 
                                 baseTableName="restaurants" constraintName="restaurants_adhesion_fk" deferrable="false" 
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="restaurant_id"
                                 referencedTableName="adhesions" referencedTableSchemaName="${schema_name}"/>
    </changeSet>

    <changeSet author="fayssol" id="RESTAURANT-FOREIGNKEY-PUB001">
        <addForeignKeyConstraint baseTableSchemaName="${schema_name}" baseColumnNames="publicites" 
                                 baseTableName="restaurants" constraintName="restaurants_pub_fk" deferrable="false" 
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="restaurant_id"
                                 referencedTableName="publicites" referencedTableSchemaName="${schema_name}"/>
    </changeSet>

    <changeSet author="fayssol" id="RESTAURANT-FOREIGNKEY-MENU001">
        <addForeignKeyConstraint baseTableSchemaName="${schema_name}" baseColumnNames="menus" 
                                 baseTableName="restaurants" constraintName="restaurants_menu_fk" deferrable="false" 
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="restaurant_id"
                                 referencedTableName="menus" referencedTableSchemaName="${schema_menu}"/>
    </changeSet>
     <changeSet author="fayssol" id="RESTAURANT-FOREIGNKEY-EMPL001">
        <addForeignKeyConstraint baseTableSchemaName="${schema_name}" baseColumnNames="employees" 
                                 baseTableName="restaurants" constraintName="restaurants_empl_fk" deferrable="false" 
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="restaurant_id"
                                 referencedTableName="employees" referencedTableSchemaName="${schema_staff}"/>
    </changeSet>
    
<!-- pour le model evenement -->
 <changeSet author="fayssol" id="EVENT-FOREIGNKEY-RESTO001">
        <addForeignKeyConstraint baseTableSchemaName="${schema_name}" baseColumnNames="restaurant_id" 
                                 baseTableName="evenements" constraintName="evenements_event_fk" deferrable="false" 
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="evenements"
                                 referencedTableName="restaurants" referencedTableSchemaName="${schema_name}"/>
    </changeSet>

    <!-- pour le modal pub -->
    <changeSet author="fayssol" id="PUB-FOREIGNKEY-RESTO001">
        <addForeignKeyConstraint baseTableSchemaName="${schema_name}" baseColumnNames="restaurant_id" 
                                 baseTableName="publicites" constraintName="publicites_resto_fk" deferrable="false" 
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="publicites"
                                 referencedTableName="restaurants" referencedTableSchemaName="${schema_name}"/>
    </changeSet>
     <changeSet author="fayssol" id="PUB-FOREIGNKEY-IMGSO001">
        <addForeignKeyConstraint baseTableSchemaName="${schema_name}" baseColumnNames="images" 
                                 baseTableName="publicites" constraintName="publicites_imgs_fk" deferrable="false" 
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="publicite_id"
                                 referencedTableName="images" referencedTableSchemaName="${schema_menu}"/>
    </changeSet>

    <!-- pour le model adhesion -->

     <changeSet author="fayssol" id="ADHESION-FOREIGNKEY-RESTO001">
        <addForeignKeyConstraint baseTableSchemaName="${schema_name}" baseColumnNames="restaurant_id" 
                                 baseTableName="adhesions" constraintName="adhesions_resto_fk" deferrable="false" 
                                 initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="code"
                                 referencedTableName="restaurants" referencedTableSchemaName="${schema_name}"/>
    </changeSet>

</databaseChangeLog>