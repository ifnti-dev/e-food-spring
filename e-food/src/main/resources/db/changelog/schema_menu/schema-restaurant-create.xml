<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

<property name="schema_name" value="restaurant"/>

<property name="schema_name1" value="menu"/>

<!--  restaurant table-->
    <changeSet  author="fayssol"  id="RESTAURANT-CREATE-UID001">
       <createTable schemaName="${schema_name}" tableName="restaurants">
            <column name="code" type="VARCHAR(100)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="nom" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="adresse" type="VARCHAR(30)"/>
            <column name="ville" type="VARCHAR(30)"/>
            <column name="telephone" type="VARCHAR(15)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="heure_ouverture" type="CHAR(2)">
                <constraints nullable="false" />
            </column>
            <column name="heure_fermeture" type="CHAR(2)">
                <constraints nullable="false" />
            </column>
            <column name="jour_ouverture" type="VARCHAR(10) []">
                <constraints nullable="false" />
            </column>
            <column name="coordonnee_gps_x" type="VARCHAR(50)"/>
            <column name="coordonnee_gps_y" type="VARCHAR(50)"/>
            <column name="etat" type="VARCHAR(30)"/>
            <!-- les OneToMany -->
            
        </createTable>
  </changeSet>



<!-- evenements table -->
    <changeSet  author="fayssol"  id="EVENEMENT-CREATE-UID001">
         <createTable schemaName="${schema_name}" tableName="evenements">
            <column name="code" type="VARCHAR(100)">
                 <constraints nullable="false"/>
            </column>
            <column name="titre" type="VARCHAR(30)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false" />
            </column>
            <column name="date_debut" type="DATE"/>
             <column name="date_fin" type="DATE"/>
             <!-- Les  ManyToOne-->
         </createTable>
    </changeSet>


       <changeSet author="fayssol" id="EVENEMENT-PRIMARYKEY-UID001">
        <addPrimaryKey schemaName="${schema_name}" columnNames="code" constraintName="evenement-id_pk" tableName="evenements"/>
    </changeSet>

    <!-- publicite table -->
    <changeSet  author="fayssol"  id="PUBLICITE-CREATE-UID001">
         <createTable schemaName="${schema_name}" tableName="publicites">
            <column name="id" type="VARCHAR(100)">
               <constraints primaryKey="true"/>
            </column>
            <column name="titre" type="VARCHAR(30)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="VARCHAR(100)"/>
          <!-- les OneToMany -->
         </createTable>
    </changeSet>

    <!-- adhesion table -->
    <changeSet  author="fayssol"  id="ADHESION-CREATE-UID001">
         <createTable schemaName="${schema_name}" tableName="adhesions">
            <column name="id" type="VARCHAR(100)">
               <constraints primaryKey="true" />
            </column>
            <column name="avis" type="VARCHAR(30)">
                <constraints nullable="false" />
            </column>
            
          <!-- les ManyToOne -->
         </createTable>
    </changeSet>


     <changeSet author="eklou(generated)" id="MENU-CREATE-UID001">
        <createTable schemaName="${schema_name1}" tableName="menus">
            
            <column name="code" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>

            <column name="nom" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            
            <column name="prix" type="FLOAT">
                <constraints nullable="false"/>
            </column>

            <column name="temps_preparation" type="VARCHAR(5)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
 
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
                           
            <column name="image" type="VARCHAR []"/>

            <column name="restaurant_id" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
              
        </createTable>

    </changeSet>

    <changeSet author="eklou(generated)" id="MENU-PRIMARYKEY-UID001">
        <addPrimaryKey schemaName="${schema_name1}" columnNames="code" constraintName="menu-id_pk" tableName="menus"/>
    </changeSet>
    

    <!-- <CREATE COMPOSANT TABLE/> -->
     <changeSet author="eklou(generated)" id="COMPOSANT-CREATE-UID002">
